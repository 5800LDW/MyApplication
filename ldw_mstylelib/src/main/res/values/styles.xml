    <style name="center_left_style">
        <item name="android:gravity">left|center</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">15sp</item>
        <item name="android:lineSpacingExtra">2dp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:width">0dp</item>
    </style>

    <!-- it's color is green and shape is round 绿色圆角按钮 -->
    <style name="textview_green_center_left_style" parent="@style/center_left_style">
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/btn_register_bg</item>
    </style>


    <!-- Animation -->
    <!-- Toast -->
    <style name="Animation.Toast" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/toast_enter</item>
        <item name="android:windowExitAnimation">@anim/toast_exit</item>
    </style>
    <!-- Slide -->
    <style name="Animation.Slide" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/slide_bottom_to_top</item>
        <item name="android:windowExitAnimation">@anim/slide_top_to_bottom </item>
    </style>

    <style name="Animation.Slide02" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/pop_enter_anim</item>
        <item name="android:windowExitAnimation">@anim/pop_exit_anim</item>
    </style>
    <!-- ExtendFromLine -->
    <style name="Animation.ExtendFromLine" mce_bogus="1" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/dialog_enter_anim</item>
        <item name="android:windowExitAnimation">@anim/dialog_exit_anim</item>
    </style>

    <!-- ExtendFromLine -->
    <style name="Animation.PopupAnimation"  parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/from_small_to_large</item>
        <item name="android:windowExitAnimation">@anim/from_large_to_small</item>
    </style>

